---
import { useState, useEffect } from "solid-js"; // optional, for reactive show/hide if using frameworks
---

<div id="scrollToTop" class="fixed bottom-5 right-5 hidden z-100">
  <button
    onclick="window.scrollTo({top: 0, behavior: 'smooth'});"
    class="bg-black/40 text-white p-2 shadow hover:bg-[#13aff0] transition cursor-pointer"
  >
    <img src="/images/top-arrow-5-svgrepo-com.svg" alt="top arrow" class="w-5 md:w-6">
  </button>
</div>

<script>
  const btn = document.getElementById("scrollToTop");

  // Show button when scrolling down
  window.addEventListener("scroll", () => {
    if (window.scrollY > 10) {
      btn.classList.remove("hidden");
    } else {
      btn.classList.add("hidden");
    }
  });
</script>
